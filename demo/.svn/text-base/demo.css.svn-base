html {
	overflow-y: scroll;
}

body {
	margin: 0;
	padding: 0;
	background: -moz-linear-gradient(top, #e1e1e1, #f1f1f1);
	background: -webkit-gradient(linear, left top, left bottom, from(#e1e1e1), to(#f1f1f1)); 
}

#container {
	width: 960px;
	margin: 0 auto;
}

header {
	display: block;
	height: 75px;
	background-color: #f5f5f5;
	-webkit-border-radius: 0 0 5px 5px;
	-moz-border-radius: 0 0 5px 5px;
	-o-border-radius: 0 0 5px 5px;
	-ms-border-radius: 0 0 5px 5px;
	border-radius: 0 0 5px 5px;
	-webkit-box-shadow: 0 0 1px 1px rgba(0, 0, 0, 0.2);
	-moz-box-shadow: 0 0 1px 1px rgba(0, 0, 0, 0.2);
	-o-box-shadow: 0 0 1px 1px rgba(0, 0, 0, 0.2);
	-ms-box-shadow: 0 0 1px 1px rgba(0, 0, 0, 0.2);
	box-shadow: 0 0 1px 1px rgba(0, 0, 0, 0.2);
}

header h1 {
	margin: 0;
	padding: 1em;
}

section {
	display: block;
	margin: 9px 0 0 0;
}

#content section:nth-child(1) {
	height: 320px;
	background-color: #f5f5f5;
	-webkit-border-radius: 5px;
	-moz-border-radius: 5px;
	-o-border-radius: 5px;
	-ms-border-radius: 5px;
	border-radius: 5px;
	-webkit-box-shadow: 0 0 1px 1px rgba(0, 0, 0, 0.2);
	-moz-box-shadow: 0 0 1px 1px rgba(0, 0, 0, 0.2);
	-o-box-shadow: 0 0 1px 1px rgba(0, 0, 0, 0.2);
	-ms-box-shadow: 0 0 1px 1px rgba(0, 0, 0, 0.2);
	box-shadow: 0 0 1px 1px rgba(0, 0, 0, 0.2);
}

#content section:nth-child(2) .block-wrapper {
	float: left;
	width: 314px;
	height: 171px;
}

#content section:nth-child(2) .block-wrapper:nth-child(2) {
	padding: 0 9px;
}		

#content section:nth-child(2) .block-wrapper .block {
	width: 294px;
	height: 151px;
	padding: 10px;
	background: -moz-linear-gradient(top, #f5f5f5, #ffffff);
	background: -webkit-gradient(linear, left top, left bottom, from(#f5f5f5), to(#ffffff)); 
	-webkit-border-radius: 5px;
	-moz-border-radius: 5px;
	-o-border-radius: 5px;
	-ms-border-radius: 5px;
	border-radius: 5px;
	-webkit-box-shadow: 0 0 1px 1px rgba(0, 0, 0, 0.2);
	-moz-box-shadow: 0 0 1px 1px rgba(0, 0, 0, 0.2);
	-o-box-shadow: 0 0 1px 1px rgba(0, 0, 0, 0.2);
	-ms-box-shadow: 0 0 1px 1px rgba(0, 0, 0, 0.2);
	box-shadow: 0 0 1px 1px rgba(0, 0, 0, 0.2);
}

#content section:nth-child(3) p {
	-webkit-text-shadow: 1px 1px 1px #ffffff;
	-moz-text-shadow: 1px 1px 1px #ffffff;
	-o-text-shadow: 1px 1px 1px #ffffff;
	-ms-text-shadow: 1px 1px 1px #ffffff; 
	text-shadow: 1px 1px 1px #ffffff;
	padding: 0.5em;
}

#content section:nth-child(4) {
	height: 250px;	
	background: -moz-linear-gradient(top, #171717, #767477);
	background: -webkit-gradient(linear, left top, left bottom, from(#171717), to(#767477)); 
	-webkit-border-radius: 5px;
	-moz-border-radius: 5px;
	-o-border-radius: 5px;
	-ms-border-radius: 5px;
	border-radius: 5px;
	-webkit-box-shadow: 0 0 1px 1px rgba(0, 0, 0, 0.2);
	-moz-box-shadow: 0 0 1px 1px rgba(0, 0, 0, 0.2);
	-o-box-shadow: 0 0 1px 1px rgba(0, 0, 0, 0.2);
	-ms-box-shadow: 0 0 1px 1px rgba(0, 0, 0, 0.2);
	box-shadow: 0 0 1px 1px rgba(0, 0, 0, 0.2);		
}

footer {
	display: block;
	margin: 9px 0 9px 0;
}

.clearfix:after {
	content: "";
	display: block;
	clear: both; 
}

.clearfix {
	display: inline-block;
}	